@model SearchResultViewModel<DriverModel>

@{
	ViewBag.Title = "Driver";
	var pagedList = Html.PagedList(Model.PagesInfo.ItemsCount, Model.PagesInfo.ItemsPerPage, Model.PagesInfo.CurrentPage,
		Model.PagesInfo.DisplayedPages, pageNumber => Url.Action(Url.GetAction(), new
		{
			page = pageNumber
		}), new PagedListExtensions.PagedListRenderParams());
}

<div class="row">
	<div class="col-md-12">
		<div class="card mb-3">
			<div class="card-body">
				<a asp-action="Update" class="btn btn-outline-primary">Добавить</a>
			</div>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		@pagedList
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<div class="table-responsive">
			<table class="table table-striped">
				<tr>
					<th class="text-center">ID</th>
                    <th class="text-center">ID компании</th>
                    <th class="text-center">Имя водителя</th>
                    <th class="text-center">Опыт</th>
                    <th class="text-center">Количество аварий</th>
					<th class="text-center">Действия</th>
				</tr>
				@foreach (var item in Model.Objects)
				{
					<tr>
						<td class="text-center">
							@item.DriverId
						</td>
                        <td class="text-center">
                            @item.CompanyId
                        </td>
                        <td class="text-center">
                            @item.DriverName
                        </td>
                        <td class="text-center">
                            @item.Experience
                        </td>
                        <td class="text-center">
                            @item.NumberOfAccidents
                        </td>
						<td class="text-center">
							<a asp-action="Update" asp-route-id="@item.DriverId">Изменить</a><br />
							<a asp-action="Delete" asp-route-id="@item.DriverId" class="delete-object-button">Удалить</a>
						</td>
					</tr>
				}
			</table>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		@pagedList
	</div>
</div>
