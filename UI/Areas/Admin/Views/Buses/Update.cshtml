@model BusModel

@{
	var exists = Model != null && Model.BusId != 0;
	ViewBag.Title = (exists ? "Редактирование" : "Создание") + " Bus";
}

<form asp-action="Update" asp-antiforgery="true" method="post">
	<div class="row">
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="BusNumber"></label>
				<input type="text" asp-for="BusNumber" class="form-control"/>
				<span asp-validation-for="BusNumber" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="CompanyId"></label>
				<input type="text" asp-for="CompanyId" class="form-control"/>
				<span asp-validation-for="CompanyId" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="NumberOfSeats"></label>
				<input type="text" asp-for="NumberOfSeats" class="form-control"/>
				<span asp-validation-for="NumberOfSeats" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="ModelName"></label>
				<input type="text" asp-for="ModelName" class="form-control" />
				<span asp-validation-for="ModelName" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="ReleaseDate"></label>
				<input type="text" asp-for="ReleaseDate" class="form-control dateTimePicker"/>
				<span asp-validation-for="ReleaseDate" class="text-danger"></span>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12 text-center">
			<button class="btn btn-outline-primary" type="submit">@(exists ? "Сохранить" : "Добавить")</button>
			<a asp-action="Index" class="btn btn-outline-secondary">Отмена</a>
		</div>
	</div>
</form>
