@model SearchResultViewModel<BusModel>

@{
	ViewBag.Title = "Buses";
	var pagedList = Html.PagedList(Model.PagesInfo.ItemsCount, Model.PagesInfo.ItemsPerPage, Model.PagesInfo.CurrentPage,
		Model.PagesInfo.DisplayedPages, pageNumber => Url.Action(Url.GetAction(), new
		{
			page = pageNumber
		}), new PagedListExtensions.PagedListRenderParams());
}

<div class="row">
	<div class="col-md-12">
		<div class="card mb-3">
			<div class="card-body">
				<a asp-action="Update" class="btn btn-outline-primary">Добавить</a>
			</div>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		@pagedList
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<div class="table-responsive">
			<table class="table table-striped">
				<tr>
					<th class="text-center">ID</th>
                    <th class="text-center">Номер автобуса</th>
                    <th class="text-center">ID Компании</th>
                    <th class="text-center">Количество сидений</th>
                    <th class="text-center">Модель</th>
                    <th class="text-center">Дата выпуска</th>
					<th class="text-center">Действия</th>
				</tr>
				@foreach (var item in Model.Objects)
				{
					<tr>
						<td class="text-center">
							@item.BusId
						</td>
                        <td class="text-center">
                            @item.BusNumber
                        </td>
                        <td class="text-center">
                            @item.CompanyId
                        </td>
                        <td class="text-center">
                            @item.NumberOfSeats
                        </td>
                        <td class="text-center">
                            @item.ModelName
                        </td>
                        <td class="text-center">
                            @item.ReleaseDate
                        </td>
						<td class="text-center">
							<a asp-action="Update" asp-route-id="@item.BusId">Изменить</a><br/>
							<a asp-action="Delete" asp-route-id="@item.BusId" class="delete-object-button">Удалить</a>
						</td>
					</tr>
				}
			</table>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		@pagedList
	</div>
</div>
